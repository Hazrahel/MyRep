<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rowbackground"
    >

    <RelativeLayout android:id="@+id/RelativeLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_query"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
         />

        <Spinner
            android:id="@+id/search_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_query"
            android:layout_alignLeft="@id/search_query"
            android:entries="@array/search_param">
        </Spinner>

        <Spinner
            android:id="@+id/search_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_query"
            android:layout_toRightOf="@+id/search_pattern"
            android:entries="@array/languages">
        </Spinner>

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/book_button"
            android:text="@string/book_button_label"
            android:layout_below="@id/search_query"
            android:layout_alignParentRight="true">
        </Button>
    </RelativeLayout>

    <ListView android:id="@+id/book_list"
        android:choiceMode="singleChoice"
        android:smoothScrollbar="false"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true">

    </ListView>
    



</LinearLayout>
